<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/textIntent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Intent dan Intent Filter"
        android:id="@+id/btnIntent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Permission"
        android:id="@+id/permission"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Buka G maps"
        android:id="@+id/gmaps"/>
    <EditText
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:inputType="phone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Dial Call"
        android:onClick="Call"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Hp"
            android:layout_marginRight="90dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/hpSms"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/textSms"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Kirim SMS"
        android:onClick="sendSMS"
        android:id="@+id/btnSms"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Buka Website"
        android:id="@+id/website"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject Email"
            android:layout_marginRight="90dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/subject"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/email"
            android:inputType="textEmailAddress"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Isi Pesan Email"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:id="@+id/emailMessage"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Kirim Email"
        android:id="@+id/btnEmail"/>
</LinearLayout>